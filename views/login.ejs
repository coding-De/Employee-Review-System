<!-- login page interface html code  -->
<link rel="stylesheet" href="/css/login.css">
<!-- Main Content -->
	 
		<div class="row main-content bg-white text-dark text-center main_login">
			<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
				<div class="container-fluid container_login" >
					<div class="row">
						<h2>Login</h2>
					</div>
                    <!-- container for taking user login data  -->
					<div class="row">
						<form control="" class="form-group mt-3" action="/users/create-session" method="POST">
							<label   style="float: left;margin-left: -11px;margin-bottom: 2px;"><b>UserEmail</b></label><br/>
							<div class="row mt-2">
                                <input type="email" id="email" name="email" class="form__input" placeholder="Enter Email"/>
							</div>
							<label style="float: left;margin-left: -11px;margin-bottom: 2px;"><b>Password</b></label><br/>
							<div class="row mt-2">
                                <input type="password" id="password" name="password" class="form__input" placeholder="Enter Password"/>
							</div>
							<div class="row mt-2 mb-2" style="border: 1px solid rgb(83, 82, 82);border-radius: 5px;width: 100px;float: right;">
								<input type="submit" value="Log In" class="btn">
							</div>
						</form>
					</div>
					<div class="row">
						<p>Don't have an account? <a href="/users/register">Register Here</a></p>
					</div>
				</div>
			</div>
		</div>